<h2> <%= @vendor.name %> </h2>
<h3> <%= @stadium.name %> </h3>

Menu: <br />

	<table>
		<tr>
			<th>name</th>
			<th>type</th>
			<th>price </th>
		</tr>
		<% @vendor.menu.items.each do |item| %>
		<tr>
			<td><%= item.name %></td>
			<td><%= item.item_type %></td>
			<td><%= number_to_currency item.price %></td>
		</tr>
		<% end %>
	</table>
	<table class="item_form">
		<%= form_for @vendor.menu.items.new, :url => url_for(:controller => "vendors", :action => 'add_item') do  |f| %>
			<%= f.hidden_field :vendor_id, :value => @vendor.id %>
			<tr>
				<td><%= f.label :name %></td>
				<td><%= f.text_field :name %></td>
			</tr>
			<tr>
				<td><%= f.label :item_type %></td>
				<td><%= f.text_field :item_type %></td>
			</tr>
			<tr>
				<td> <%= f.label :price %></td>
				<td> <%= f.text_field :price %></td>
			</tr>
			<tr colspan="2"> <td> <%= f.submit %></td> </tr>
		<% end %>
	</table>
