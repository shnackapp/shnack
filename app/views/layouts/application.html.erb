 	<!DOCTYPE html>
<html>
<head>
<%= favicon_link_tag 'logo.ico' %>
  <title>Shnack</title>



  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>


   	<script> 
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-52696113-1', 'auto');
	  ga('require', 'displayfeatures');

	  ga('send', 'pageview');
	</script>

</head>


<body >

	<div class="wrapper" id="top">
		<div id="topbar" class="row-new topbar clear-fix">
			<div class="my-container">

				<a href="/"><h3 class="column two">Shnack</h3></a>


				<div class="prgs-bar column-mobile eight">
					<div class="title_current_step">
						<%= yield :page_title %>
					</div>
				</div>


				<% if user_signed_in? %>
					<ul id="click_me" class="column one my-gear">
						
						<li>
							<a href="#" class="opac-fix"><%= image_tag("gear-small-w.png", alt: "settings", style: "opacity:0.8;") %></a> 
							
							<ul>
									<li class="shnack-credit">Account Credit: <%= Order.integer_to_currency current_user.account_credit %> </li>
								
								<% if current_user.is_manager?  %>
									<li><%= link_to "Manage Your Vendors", :controller => "/shnack", :action => "manage_vendors" %></li>
								<%end%>
								<% if current_user.is_super? %>
									<li> <%= link_to "Super User", :controller => "/super", :action => "manage_as_super" %></li>
								<% end %>
								<li><%= link_to "Account Settings", edit_user_registration_path %></li>
								<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
							</ul>
						</li>
					</ul>
				<%else%>
					<div class="user-settings links">
						<%= link_to('Login', new_user_session_path, :class => 'user')  %> 
						<%= link_to('Sign Up', new_user_registration_path, :class => 'user')  %>  
					</div> 
				<%end%>
			</div>
		</div> <!--ENDS TOPBAR-->

		<div class="flash"> 
			<% if flash[:notice] %>
				<div class="notice"><%= flash[:notice] %></div>
			<% end %>
			<% if flash[:error] %>
				<div class="f-error"> <%= flash[:error] %> </div>
			<% end %>
		</div>
			

		<div id="order-form" class="the-menu">
			<%= yield %>
		</div>
				
	</div>
	<% unless user_signed_in? %>
		<section class="wrapper-khaki text-center pad">
			<div class="my-container-half">
				<h4 class="SSS bold">Limited time offer</h4>
				<p class="pad-bottom">Sign up today and get $5 in Shnack Credit</p>

				<% unless current_page?('/users/sign_up') %>
					<a href='/users/sign_up' class="push-btn brown">Sign me up</a>
				<% end %>
			</div>
		</section>
	<% end %>

	<section class="wrapper" style=" background-color: darkseagreen; padding: 10px; color:white;">
		<div class="row-new" >
			<div class="column-mobile twelve" style="text-align:center;">
				<h3>How It Works</h3>
			</div>
		</div>
	</section>



	<section class="wrapper-darkseagreen" style="padding-bottom:65px;">
	
		<div class="row-new pad-y easy-123">
			<div class="column-mobile four">
				<h2>1. Select your location</h2>
				<span class="i-location"></span>
				<p>Order food from your current spot on your phone or laptop</p>
			</div>
			<div class="column-mobile four">
				<h2>2. Order & Pay</h2>
				<span class="i-pay"></span>
				<p>Pay in app and be noitified via text when your food is ready</p>
			</div>
			<div class="column-mobile four">
				<h2>3. Relax until Pick Up</h2>
				<span class="i-pickup"></span>
				<p>Sit back, skip the line, & pickup your food</p>
			</div>
		</div>

	</section>

	<footer class="popup-banner pad-y-lrg">

		<a href="/join" class="learn-more"> Want to become a part of the Shnack Community? Learn More </a>
		<a href="#top_now" class="place-order">Return to top</a>
	</footer>

</body>
</html>
