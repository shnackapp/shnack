<!DOCTYPE html>
<html>
<head>
  <title>Shnack</title>

 
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="stripe-key" content="<%= Rails.configuration.stripe[:publishable_key] %>">

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
	<div class="container">
		<div class="row">


			<div id="nav" class="col-md-3 col-md-push-4 col-md-offset-3"> 
			  <%= link_to(image_tag("shnack_beta3.png", :class => "logo img-responsive"), root_path)   %>
			  <ul id="account-manage" class="nav nav-pills nav-stacked hidden-xs">
			  <% if user_signed_in? %>
				<li>
				  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>   
				<li>   
				  <%= link_to "Change your password", edit_user_registration_path %>
				  <%= link_to "Manage Your Vendors", :controller => "shnack", :action => "manage_vendors" %>
				</li>
			  <% else %>
				<li>
				<%= link_to('Login', new_user_session_path)  %>  
				</li>
			  <% end %>
			  </ul>
			</div>


			<div class="col-md-4 col-md-pull-3">

				<div id="order-form" class="row">
					<%= yield %>
				</div>
			</div>

		</div>



	</div>



</body>

</html>
