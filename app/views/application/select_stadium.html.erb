<% content_for :page_title do%>
Select Your Location
<% end %>

<div class="list-group select">
	<% @locations.each do |location| %>

		<%= location.is_open? ? link_to(location.name, {:action => "select_vendor", :object_id  => location.id}, :class=>"list-group-item open") : link_to(location.name + " - Currently Closed", '#', :class=>"list-group-item list-group-item-danger") if !location.hide_when_closed? %> 

	<% end %>

</div>
