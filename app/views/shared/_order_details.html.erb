<table class="table">
		<thead>
			<td> Item </td>
			<td> Qty </td>
			<td> Price </td>
			<td> Total </td>
		</thead>
		<% @order_items.each do |order_item| %>
		<tr>

			<td><%= @items[order_item.item_id].name %></td> 
			<td><%= order_item.quantity %> </td>
			<td> <%= number_to_currency @items[order_item.item_id].price %></td>
			<td> <%= number_to_currency(@items[order_item.item_id].price * order_item.quantity) %></td>
		</tr>
		<% end %>

		
		<tfoot>
			<% if @order.subtotal != @order.total %>
				<tr>
					<td>Subtotal</td>
					<td></td>
					<td></td>
					<td> <%= integer_to_currency(@order.subtotal) %> </td>
				</tr>
				<tr>
					<td>Tax</td>
					<td></td>
					<td></td>
					<td> <%= integer_to_currency(@order.total-@order.subtotal) %></td>
				</tr>
				<tr>
					<td>Total</td>
					<td></td>
					<td></td>
					<td> <%= integer_to_currency(@order.total) %> </td>
				</tr>
			<% else %>
				<tr>
					<td>Total</td>
					<td></td>
					<td></td>
					<td> <%= integer_to_currency(@order.total) %> </td>
				</tr>
			<% end %> 

		</tfoot>

	</table>