<%= render 'top_nav' %>

<h2>My Restaurant</h2>

<div class="my-well">
	<h4>Money Status</h4>
	<div><strong> Amount Available: </strong> <%= Order.integer_to_currency @amount %> </div>

	<% if @amount == 0 %>
		<%= button_to "Nothing to Withdraw", '/#', { :class => "action-btn mar-y", disabled: "disabled "} %>
	<% else %>
		<%= button_to "Withdraw", withdraw_funds_restaurant_path(@restaurant), { :class => "action-btn green mar-y", :method => 'post' } %>
	<% end %>

	<% if @account.nil? %>
		<%= button_to "Add Bank Account", bank_account_restaurant_path(@restaurant), { :class => "action-btn brown mar-y", :method => 'get' } %>
	<% else %>
		<div> <strong>Bank Account:</strong> <%= @account.bank_name %> <%= @account.last4 %> </div>
		<%= button_to "Change Bank Account", bank_account_restaurant_path(@restaurant), { :class => "action-btn brown", :method => 'get' } %>
	<% end %>

	<div class="mar-top">	<strong> Status of Your Last Transfer: </strong> </div>
		<% if @transfer.nil? %> None
		<% else %><strong> <%= @transfer.status %> </strong>
		<% end %>
	</div>
<div>


<section class="my-well-lemon">
	<h4>Managers</h4>
	<% @restaurant.roles.each do |role| %>
		<div> <%= role.user.email %> </div>
	<% end %>

	<% if current_user.is_super? %>
		<%= form_tag add_manager_restaurant_path(@restaurant)  do %>
			<label>Add Manager By Email [is_super]</label>
			<ol>
				<%= text_field_tag :email, nil, class: 'five' %>
				<%= submit_tag 'Send Invite', :class => "green" %>
			</ol>
		<% end %>
	<% end %>
	<br /><br />

	<h4>Registration Code:</h4>
	<%= @restaurant.registration_code %> <%= link_to "Generate new code", new_registration_code_restaurant_path(@restaurant) %>
	<br /><br />

	<% if @restaurant.cash_only? %><h4>Cash is King <small>[ CASH ONLY ]</small></h4> <% end %>
	<h4>Add Tax? <small>- <%= @restaurant.add_tax %></small></h4>
	<h4>Tax: <small><%= @restaurant.tax %></small>></h4>
	<h4>Shnack Fee? <small>- <%= @restaurant.shnack_fee? %></small></h4>
	<h4>Fee: <small><%= @restaurant.shnack_fee %></small></h4>
	<br />

	<%= link_to "Edit Restaurant", edit_restaurant_path(@restaurant), class: "action-btn" %>
	<% if current_user.is_super? %>
	<%= link_to "Delete Restaurant [is_super]", restaurant_path(@restaurant), :method => :delete, class: "action-btn red right clear-fix" %>
	<% end %>

</section>
