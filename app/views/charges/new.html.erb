

<%= form_tag order_charges_path(@order) do %>
	<table class="table">
		<thead>
			<th> Item </th>
			<th> Price </th>
			<th> Qty </th>
			<th> Total </th>
		</thead>
		<% @order_details.each_pair do |id, qty| %>
		<tr>

			<td><%= @items[id].name %></td> 
			<td> <%= number_to_currency @items[id].price %></td>
			<td><%= qty %> </td>
			<td> <%= number_to_currency(@items[id].price * qty) %></td>
		</tr>
		<% end %>

		<tfoot>
			<td>Total</td>
			<td></td>
			<td></td>
			<td> <%= integer_to_currency(@order.amount) %> </td>
		</tfoot>


	</table>

	<div class="text-center">
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="<%= @order.amount %>"></script>
      </div>
<% end %>
