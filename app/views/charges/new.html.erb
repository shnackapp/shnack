

<%= form_tag order_charges_path(@order) do %>
	<%= render 'shared/order_details' %>

	<%= telephone_field(:user, :phone, :class => "form-control",:id => "order-phone-number", :placeholder => "Phone #") %> 
	<br />
  <%= email_field(:user, :email, :class => "form-control", :id => "order-phone-email", :placeholder => "E-mail address") %>
 
  <%= button_tag(type: 'submit', class: "btn btn-primary btn-danger", id: "submit-order") do %>
      <i class="glyphicon glyphicon-cutlery icon-white"></i> Submit Your Order
    <% end %>

	<% end %>
