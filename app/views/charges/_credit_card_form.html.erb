  <div class="row">
    <div class="col-md-12">
      <div class="new-card-form">
        <%= text_field_tag :credit_card_number, nil, :class => "form-control", :placeholder => "Credit Card Number"  %> 
        <div class="row"> 
          <div class="col-md-4">
            <%= text_field_tag :expiration_month, nil,  :class => "form-control", :placeholder => "MM" %>
          </div>
          <div class="col-md-4">
            <%= text_field_tag :expiration_year, nil, :class => "form-control", :placeholder => "YY" %>
          </div>
          <div class="col-md-4">
            <%= text_field_tag :security_code, nil, :class => "form-control", :placeholder => "CVC" %>
          </div>
        </div>
      </div>

    </div>
  </div>
